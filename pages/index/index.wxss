/* new */

.shop_new {
  width: 100%;
  height: 600rpx;
}

.shop_new .new_title {
  height: 90rpx;
  width: 100%;
  line-height: 90rpx;
  display: flex;
}

.shop_new .new_title .new_left {
  width: 50%;
  float: left;
}

.shop_new .new_title .new_left .icon {
  display: flex;
  width: 80rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 5rpx;
}

.shop_new .new_title .new_left image {
  display: flex;
  height: 70rpx;
  width: 90rpx;
}

.shop_new .new_title .new_left text {
  color: #3889ff;
  font-weight: bold;
  font-size: 30rpx;
}

.shop_new .new_title .new_right {
  width: 50%;
  float: left;
}

.shop_new .new_title .new_right navigator {
  width: 80rpx;
  height: 90rpx;
  float: right;
}

.shop_new .new_title .new_right text {
  color: #999;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.shop_new .new_content {
  height: 510rpx;
  width: 100%;
}

.shop_new .new_content scroll-view {
  white-space: nowrap;
  display: flex;
}

.shop_new .new_content scroll-view li {
  width: 320rpx;
  height: 500rpx;
  display: inline-block;
  margin: 0 5rpx;
  border: 1px #eee solid;
}

.shop_new .new_content scroll-view li navigator {
  width: 100%;
  height: 100%;
}

.shop_new .new_content scroll-view li .img {
  width: 320rpx;
  height: 320rpx;
  display: flex;
  float: left;
  position: relative;
}

.shop_new .new_content scroll-view li .img image {
  width: 320rpx;
  height: 320rpx;
  display: flex;
  float: left;
}

.shop_new .new_content scroll-view li .img .supply {
  position: absolute;
  width: 100rpx;
  height: 90rpx;
  left: 4rpx;
  top: 0;
  background: url('http://cs.300c.cn/yeyangyang/statics/images/discounts_icon.png') no-repeat;
  background-size: 100% 100%;
  opacity: 0.8;
  color: #fff;
}

.shop_new .new_content scroll-view li .img .supply text {
  display: block;
  font-size: 22rpx;
  text-align: center;
  margin: 4rpx 0;
}

.shop_new .new_content scroll-view li .title {
  float: left;
  width: 300rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop_new .new_content scroll-view li .title text {
  overflow: hidden;
  width: 300rpx;
  color: #333;
}

.shop_new .new_content scroll-view li .price {
  float: left;
  padding: 0 10rpx;
}

.shop_new .new_content scroll-view li .price text:first-child {
  color: #ff5858;
  font-size: 26rpx;
  font-weight: bold;
}

.shop_new .new_content scroll-view li .price text:last-child {
  color: #ccc;
  font-size: 20rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.shop_new .new_content scroll-view li .get {
  float: left;
  width: 100%;
  height: 80rpx;
}

.shop_new .new_content scroll-view li .get .get_warp_80 {
  margin: 0 auto;
  width: 80%;
  height: 80rpx;
  border: 1px solid #ff5858;
  border-radius: 10rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
}

.shop_new .new_content scroll-view li .get .get_top {
  width: 100%;
  height: 50%;
  color: #fff;
  background-color: #ff5858;
}

.shop_new .new_content scroll-view li .get .get_bottom {
  width: 100%;
  height: 50%;
  color: #ff5858;
}


/**index.wxss**/

/* banner */

.banner_box {
  width: 100%;
  height: 300rpx;
}

.banner_box swiper {
  width: 100%;
  height: 300rpx;
}

/* 一定要给图片设置宽高 */

.banner_box image {
  width: 100%;
  height: 300rpx;
}

/* banner */

/* search */

.search_box {
  background-color: #ff5858;
}

.search_box .search_warp {
  margin: 10px auto;
  background-color: #fff;
  border-radius: 8px;
  width: 90%;
  position: relative;
  clear: both;
  overflow: hidden;
  padding-left: 40px;
  box-sizing: border-box;
}

.search_box .reset_btn {
  background: none;
  position: absolute;
  border: none;
  right: 0;
  top: 0;
  bottom: 0;
  width: 80rpx;
}

.search_box .reset_btn icon {
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  z-index: 5;
}

.search_box .search_btn {
  background: none;
  position: absolute;
  border: none;
  left: 0;
  top: 0;
  bottom: 0;
  width: 80rpx;
}

.search_box .search_btn icon {
  position: absolute;
  left: 20rpx;
  top: 15rpx;
  z-index: 5;
}

.search_box .search__input {
  width: 85%;
  font-size: 12px;
  height: 30px;
  lighting-color: 30px;
  color: #333;
}

/* search */

/* nav */

.nav_box {
  width: 100%;
  height: 330rpx;
}

.nav_box swiper {
  height: 330rpx;
}

.nav_box swiper-item {
}

.nav_box swiper-item ul {
}

.nav_box swiper-item ul li {
  float: left;
  width: 25%;
  text-align: center;
  margin: 5px auto;
}

.nav_box swiper-item ul li navigator {
  height: auto;
  width: auto;
  display: block;
}

.nav_box swiper-item ul li navigator image {
  width: 86rpx;
  height: 86rpx;
}

.nav_box swiper-item ul li navigator text {
  color: #666;
  display: block;
  font-size: 24rpx;
}

/* nav */

/* show */

.shop_show {
  width: 100%;
  height: 400rpx;
}

.shop_show .show_left {
  width: 50%;
  height: 400rpx;
  float: left;
}

.shop_show .show_left image {
  width: 100%;
  height: 400rpx;
}

.shop_show .show_right {
  width: 50%;
  height: 400rpx;
  float: right;
  background-color: #eee;
}

.shop_show .show_right .show_top {
  width: 100%;
  height: 195rpx;
